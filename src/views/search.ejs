<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books Repository</title>

  
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <%- include('partials/header.ejs') %>

    <div class="container">

      <form action="/books/search" method="POST" class="col-12 col-lg-auto mb-3 me-lg-3 formmm" _lpchecked="1">
        <div class="input-group">
          <input type="text" class="form-control inputOfForm" placeholder="Book Title..." name="title">
          <button type="submit" class="btn btn-secondary">Search</button>
        </div>
      </form>
  </div>
</div>
<% if (books) { %>
<div class="list-group mt-3">
  <div class="container">
  <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
  <% if (books.length > 0) { %>
    <% books.forEach(book => { %>
      <div class="feature col">
        <div class="feature-icon bg-gradient">
          <img class="d-block mx-auto mb-4" src="<%= book.cover%>" alt="" width="172" height="257">
        </div>
        <h2><%= book.title%></h2>
        <p> <%= book.description%></p>
        <a href="/books/detail/<%= book.id%>" class="icon-link">
          Detail
        </a>
      </div>
      <% }); %>
  </div>
</div>
  <% } else { %>
      <p>No books found.</p>
  <% } %>
</div>
<% } %>

<script>
  //para que no se envie vacio
  let formmm = document.querySelector('.formmm')

  formmm.addEventListener("submit",function(e){
    let inp = document.querySelector(".inputOfForm")
    if (inp.value.trim() === "") {
      e.preventDefault()
      } 
    })
</script>



<%- include('partials/footer.ejs') %>
</body>
</html>